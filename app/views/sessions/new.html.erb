<div class="container">
  <h1 class="rock-font">Log In</h1><br>
  <% if flash[:danger] %>
    <%= flash[:danger] %>
  <% end %>

  <%= form_for(:session, url: login_path) do |f| %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Login" %>
    </div>
  <% end %>
</div>
